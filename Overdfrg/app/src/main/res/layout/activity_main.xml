<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30">

        </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rg_zu">

        </FrameLayout>
        <RadioGroup
            android:id="@+id/rg_zu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/rb_shang"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_40"
                android:gravity="center"
                android:drawableTop=""
                android:textSize="@dimen/sp_13"
                android:button="@null"
                android:checked="true"
                android:text="@string/shoping"/>
            <RadioButton
                android:id="@+id/rb_zhong"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_40"
                android:gravity="center"
                android:textSize="@dimen/sp_13"
                android:button="@null"
                android:textColor="@color/black_theme"
                android:checked="false"
                android:text="@string/cao"/>
            <RadioButton
                android:id="@+id/rb_fa"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_40"
                android:gravity="center"
                android:textSize="@dimen/sp_13"
                android:button="@null"
                android:checked="false"
                android:text="@string/fa"/>
            <RadioButton
                android:id="@+id/rb_kuo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_40"
                android:gravity="center"
                android:textSize="@dimen/sp_13"
                android:button="@null"
                android:checked="false"
                android:text="@string/say"/>
            <RadioButton
                android:id="@+id/rb_home"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_40"
                android:gravity="center"
                android:textSize="@dimen/sp_13"
                android:button="@null"
                android:checked="false"
                android:text="@string/home"/>

        </RadioGroup>
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>